@model IEnumerable<string>

@Html.ActionLink("Online Shopping Store", "Index", "Home", null, new { @class = "btn btn-block btn-default btn-lg" })
@Html.ActionLink("All products", "List" , "Product", null, new {@class = "btn btn-block btn-default btn-lg"})


@foreach(var link in Model)
{
    @Html.RouteLink(link, new 
        {
            controller= "Product",
            action = "List",
            category = link,
            page = 1
            
        },
        
        new {@class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectedCategory? "btn-primary" : "" )
        
        
        }
        )
}